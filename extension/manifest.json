{
    "manifest_version": 3,
    "name": "Eco-Cognition Shield",
    "version": "1.0",
    "description": "Track the carbon footprint of your digital habits and restore your digital forest.",
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "*://*.youtube.com/*",
        "*://*.tiktok.com/*",
        "*://*.instagram.com/*",
        "*://*.facebook.com/*",
        "*://*.netflix.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*",
                "*://*.tiktok.com/*",
                "*://*.instagram.com/*",
                "*://*.facebook.com/*",
                "*://*.netflix.com/*",
                "http://localhost:5173/*",
                "http://localhost:3000/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Eco-Cognition Shield"
    }
}